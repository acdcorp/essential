!!!
%html
  %head
    %title SubroLink by ACD

    %meta{'http-equiv' => "X-UA-Compatible", content: "IE=edge,chrome=1"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}

    /[if IE]
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  // TODO: remove the static class login
  - if user_signed_in?
    %body{ class: "#{controller.controller_name} #{@body_class}".strip }
      = render partial: 'layouts/header'
      .container-fluid
        .row
          #sidebar.col-sm-3.col-md-2.sidebar
            = render partial: 'layouts/sidebar'
          #content.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2
            - if content_for?(:breadcrumbs)
              #breadcrumbs
                = yield(:breadcrumbs)
            .main
              = yield
  - else
    %body{ class: "login" }
      = yield
