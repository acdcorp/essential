#header.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
  .container-fluid
    .navbar-header
      %a.navbar-brand{href: "/"}
        %img{alt: "logo", src: "#{asset_path('logo.png')}", width: '150px'}
      %ul.nav.navbar-nav
        %li
          %a{ href: 'javascript:{};', 'toggle-sidebar' => 'sidebar' }
            = fa_icon :bars
    %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            %span #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu
            %li
              %a{:href => "/logout"}
                = fa_icon :key
                Log Out
