= widget_div id: 'claim-selected-company' do
  - if form.company_id.present?
    = f.input :negotiator, as: :select, prompt: true,
      collection: Claim.negotiator.values,
      label_method: ->(r) { r == 'acd' ? 'ACD' : r.humanize }

    = f.input :primary_client_contact_id, prompt: true,
      as: :select, collection: Company.find(form.company_id).users,
      label_method: ->(p) { p.full_name },
      value_method: ->(p) { p.id }
